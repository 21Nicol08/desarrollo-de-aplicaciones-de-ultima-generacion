Ejercicio10
using System;

class Program
{
    static void Main()
    {
        double numerador = Math.Pow(2 + 4, 2);
        double denominador = Math.Pow(4 * 8, 3);

        double resultado = numerador / denominador;
        
        double resultadoRedondeado = Math.Round(resultado, 4);

        Console.WriteLine("El resultado redondeado es: " + resultadoRedondeado);
    }
}



Ejercicio11
