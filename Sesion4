Ejercicio1
using System;

class Program
{
    static void Main()
    {
        Console.Write("Ingrese su nombre de usuario: ");
        string nombreUsuario = Console.ReadLine();
        Console.WriteLine("El nombre de usuario es: " + nombreUsuario);
    }
}



